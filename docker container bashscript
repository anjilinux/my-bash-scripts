#!/bin/bash
yum update -y
  
   yum install net-tools -y 
  yum install openssh-server -y 

   yum install python3 -y 
  yum upgrade  -y
  yum install nano -y 
   yum install firewalld -y

  yum install ncurses

yum install sudo 

yum upgrade -y 

 dnf install tree
  dnf install firewalld
dnf install net-tools


 yum upgrade -y
   dnf upgrade -y

